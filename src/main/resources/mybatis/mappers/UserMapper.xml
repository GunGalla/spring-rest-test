<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gungalla.springresttask.repository.UserRepository">
    <resultMap id="UserResultMap" type="com.gungalla.springresttask.domain.user.User" autoMapping="false">
        <id property="id" column="user_id"/>
        <result property="name" column="user_name"/>
        <result property="username" column="user_username"/>
        <result property="password" column="user_password"/>
        <collection property="roles"
                    ofType="com.gungalla.springresttask.domain.user.Role"
                    autoMapping="false">
            <result property="name" column="user_role"/>
        </collection>
        <collection property="tasks"
                    ofType="com.gungalla.springresttask.domain.task.Task"
                    resultMap="com.gungalla.springresttask.repository.TaskRepository.TaskResultMap"
                    autoMapping="false"/>
    </resultMap>
</mapper>